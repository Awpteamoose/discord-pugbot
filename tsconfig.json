{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"sourceMap": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"strictNullChecks": true,
		"outDir": "./built"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules/**/*"
	]
}
